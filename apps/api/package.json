    "@hono/zod-validator": "^0.7.6",
    "@libsql/client": "^0.15.15",
    "@noko/shared": "workspace:*",
    "better-auth": "^1.4.10",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.11.3",
    "qrcode": "^1.5.4",
    "resend": "^6.6.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/qrcode": "^1.5.5",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.3.3"
  }
