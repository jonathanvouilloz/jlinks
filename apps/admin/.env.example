# Database (Turso)
DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-token

# Auth
BETTER_AUTH_SECRET=your-secret-min-32-chars

# App URL
ADMIN_URL=http://localhost:5173

# Public site URL (where Noko pages are published)
# Development: http://localhost:4321
# Production: https://nokolink.com
PUBLIC_SITE_URL=http://localhost:4321

# Email (Resend) - optional in development
EMAIL_FROM=Noko <noreply@nokolink.com>
RESEND_API_KEY=re_xxxxx

# QStash (Upstash) - optional in development
# En dev, les emails sont envoyés directement via Resend
# En prod, ils passent par QStash pour les retries automatiques
QSTASH_TOKEN=
QSTASH_CURRENT_SIGNING_KEY=
QSTASH_NEXT_SIGNING_KEY=

# ISR Bypass Token (pour invalidation instantanée du cache)
# Générer avec: openssl rand -hex 32
ISR_BYPASS_TOKEN=your-secret-token
