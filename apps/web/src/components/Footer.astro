---
import en from '@noko/shared/i18n/en.json';
import fr from '@noko/shared/i18n/fr.json';

interface Props {
  showBranding?: boolean;
  locale?: string;
}

const { showBranding = true, locale: propLocale } = Astro.props;
const locale = propLocale || Astro.currentLocale || 'en';
const t = locale === 'fr' ? fr : en;
---

{
  showBranding && (
    <footer class="page-footer">
      <a href="https://nokolink.com" target="_blank" rel="noopener noreferrer">
        {t.common_created_with_noko}
      </a>
    </footer>
  )
}

<style>
  .page-footer {
    text-align: center;
    padding: 2rem 0 1rem;
    margin-top: auto;
  }

  .page-footer a {
    font-size: 0.75rem;
    opacity: 0.5;
    transition: opacity 0.15s ease;
  }

  .page-footer a:hover {
    opacity: 0.8;
  }
</style>
