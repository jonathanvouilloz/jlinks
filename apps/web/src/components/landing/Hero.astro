---
import { Star } from 'lucide-astro';

interface Props {
  adminUrl: string;
}

const { adminUrl } = Astro.props;
---

<section class="hero">
  <!-- Dark Background Layer -->
  <div class="hero-background">
    <!-- Decorative Elements -->
    <div class="decorative-elements">
      <div class="glow glow-1"></div>
      <div class="glow glow-2"></div>
      <div class="circle-ring circle-ring-1"></div>
      <div class="circle-ring circle-ring-2"></div>
    </div>
  </div>

  <!-- Side Mascots -->
  <div class="mascot-side mascot-left">
    <img src="/good.png" alt="" class="mascot-img" />
  </div>
  <div class="mascot-side mascot-right">
    <img src="/good.png" alt="" class="mascot-img" />
  </div>

  <div class="container hero-content-wrapper">
    <div class="hero-content text-center">
      <h1 class="hero-tagline">
        All your links<br />
        <span class="highlight">in one place</span>
      </h1>
      
      <p class="hero-description">
        Create your personalized page in seconds. Share your social networks, music, videos and more with a single link.
      </p>
      
      <div class="hero-actions">
        <a href={`${adminUrl}/register`} class="btn btn-primary btn-lg">
          Create my page
        </a>
        <a href="#demo" class="btn btn-secondary btn-lg">
          See demo
        </a>
      </div>

      <!-- Social Proof -->
      <div class="social-proof">
        <div class="avatars">
          <div class="avatar" style="background-color: #FF6B5B;">J</div>
          <div class="avatar" style="background-color: #10b981;">S</div>
          <div class="avatar" style="background-color: #8b5cf6;">M</div>
          <div class="avatar" style="background-color: #f59e0b;">A</div>
        </div>
        <div class="social-text">
          <div class="stars">
            <Star size={16} fill="#FCD34D" strokeWidth={0} />
            <Star size={16} fill="#FCD34D" strokeWidth={0} />
            <Star size={16} fill="#FCD34D" strokeWidth={0} />
            <Star size={16} fill="#FCD34D" strokeWidth={0} />
            <Star size={16} fill="#FCD34D" strokeWidth={0} />
          </div>
          <span class="happy-users">100+ happy users</span>
        </div>
      </div>
    </div>

    <!-- Dashboard Preview -->
    <div class="hero-visual">
      <div class="dashboard-preview">
        <!-- Placeholder for Screenshot -->
        <div class="dashboard-placeholder">
          <div class="dashboard-header">
            <div class="dots">
              <span class="dot red"></span>
              <span class="dot yellow"></span>
              <span class="dot green"></span>
            </div>
            <div class="address-bar">nokolink.com/admin</div>
          </div>
          <div class="dashboard-body">
            <div class="skeleton-sidebar"></div>
            <div class="skeleton-content">
              <div class="skeleton-hero"></div>
              <div class="skeleton-grid">
                <div class="skeleton-card"></div>
                <div class="skeleton-card"></div>
                <div class="skeleton-card"></div>
              </div>
            </div>
          </div>
          <div class="dashboard-overlay">
            <span>Dashboard Screenshot</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: #16162a;
    overflow: hidden;
    padding-top: 140px;
    padding-bottom: 80px;
  }

  /* Background & Decor */
  .hero-background {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #16162a 0%, #1a1a2e 50%, #252547 100%);
    pointer-events: none;
    z-index: 0;
  }

  .decorative-elements {
    position: absolute;
    inset: 0;
  }

  .glow {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
  }

  .glow-1 {
    width: 600px;
    height: 600px;
    background: var(--color-primary);
    top: -20%;
    left: 20%;
    opacity: 0.1;
  }

  .glow-2 {
    width: 500px;
    height: 500px;
    background: #8b5cf6;
    bottom: -10%;
    right: 10%;
    opacity: 0.1;
  }

  .circle-ring {
    position: absolute;
    border-radius: 50%;
    border: 1px solid rgba(255, 255, 255, 0.03);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .circle-ring-1 { width: 1400px; height: 1400px; }
  .circle-ring-2 { width: 1000px; height: 1000px; }

  /* Mascots */
  .mascot-side {
    position: absolute;
    z-index: 1;
    pointer-events: none;
    opacity: 0.9;
    display: block; /* Ensure visibility */
  }

  .mascot-img {
    width: 100%;
    height: auto;
    filter: drop-shadow(0 0 40px rgba(0, 0, 0, 0.3));
  }

  .mascot-left {
    top: 15%;
    left: 0;
    width: 480px; /* Significantly larger */
    max-width: 35vw;
    transform: translateX(-25%) rotate(12deg);
    animation: float-left 6s ease-in-out infinite;
  }

  .mascot-right {
    top: 45%; /* Lowered position */
    right: 0;
    width: 260px; /* Smaller */
    max-width: 18vw;
    transform: translateX(25%) rotate(-18deg) scaleX(-1);
    animation: float-right 7s ease-in-out infinite;
  }

  @keyframes float-left {
    0%, 100% { transform: translateY(0) translateX(-20%) rotate(15deg); }
    50% { transform: translateY(-20px) translateX(-20%) rotate(12deg); }
  }

  @keyframes float-right {
    0%, 100% { transform: translateY(0) translateX(20%) rotate(-15deg) scaleX(-1); }
    50% { transform: translateY(-20px) translateX(20%) rotate(-18deg) scaleX(-1); }
  }

  /* Content */
  .hero-content-wrapper {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3.5rem;
    width: 100%;
  }

  .hero-content {
    max-width: 800px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .hero-tagline {
    font-size: clamp(3.5rem, 6vw, 5rem);
    font-weight: 800;
    color: #ffffff;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.03em;
  }

  .hero-description {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
    margin-bottom: 2.5rem;
    max-width: 600px;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-bottom: 3rem;
  }

  .btn-lg {
    padding: 1rem 2.5rem;
    font-size: 1.125rem;
    min-width: 180px;
  }

  /* Social Proof */
  .social-proof {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  .avatars {
    display: flex;
    padding-left: 10px;
  }

  .avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 2px solid #1a1a2e;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 0.75rem;
    font-weight: 700;
    margin-left: -10px;
  }

  .social-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .stars {
    display: flex;
    gap: 2px;
  }

  .happy-users {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
  }

  /* Dashboard Visual */
  .hero-visual {
    width: 100%;
    max-width: 1000px;
    perspective: 1000px;
  }

  .dashboard-preview {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 0;
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.4),
      0 0 100px rgba(255, 107, 91, 0.1); /* Subtle glow */
    backdrop-filter: blur(10px);
    overflow: hidden;
    transform: rotateX(5deg); /* Slight 3D tilt */
    transition: transform 0.5s ease;
  }

  .hero-visual:hover .dashboard-preview {
    transform: rotateX(0deg);
  }

  .dashboard-placeholder {
    width: 100%;
    aspect-ratio: 16/9;
    background: #0f172a;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .dashboard-header {
    height: 40px;
    background: #1e293b;
    border-bottom: 1px solid #334155;
    display: flex;
    align-items: center;
    padding: 0 1rem;
    gap: 1rem;
  }

  .dots {
    display: flex;
    gap: 6px;
  }

  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .red { background: #ef4444; }
  .yellow { background: #f59e0b; }
  .green { background: #10b981; }

  .address-bar {
    flex: 1;
    height: 24px;
    background: #0f172a;
    border-radius: 4px;
    color: #64748b;
    font-size: 0.75rem;
    display: flex;
    align-items: center;
    padding: 0 0.75rem;
    max-width: 300px;
    margin: 0 auto;
  }

  .dashboard-body {
    flex: 1;
    display: flex;
    padding: 1rem;
    gap: 1rem;
    position: relative;
  }

  .skeleton-sidebar {
    width: 200px;
    background: #1e293b;
    border-radius: 8px;
    opacity: 0.5;
  }

  .skeleton-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .skeleton-hero {
    height: 150px;
    background: #1e293b;
    border-radius: 8px;
    opacity: 0.7;
  }

  .skeleton-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    flex: 1;
  }

  .skeleton-card {
    background: #1e293b;
    border-radius: 8px;
    opacity: 0.5;
  }

  .dashboard-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.3);
  }

  .dashboard-overlay span {
    color: rgba(255, 255, 255, 0.5);
    font-size: 1.5rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border: 2px dashed rgba(255, 255, 255, 0.3);
    padding: 1rem 2rem;
    border-radius: 8px;
  }

  @media (max-width: 1024px) {
    .mascot-side {
      opacity: 0.5;
    }
    
    .mascot-left { left: -150px; }
    .mascot-right { right: -150px; }
  }

  @media (max-width: 768px) {
    .hero {
      padding-top: 100px;
    }

    .mascot-side {
      display: none; /* Hide mascots on small screens to reduce clutter */
    }

    .hero-tagline {
      font-size: 2.5rem;
    }

    .dashboard-placeholder {
      aspect-ratio: 4/3; /* Taller on mobile */
    }
    
    .skeleton-sidebar { display: none; }
    .skeleton-grid { grid-template-columns: 1fr; }
  }
</style>