---
import { Star } from 'lucide-astro';

interface Props {
  adminUrl: string;
}

const { adminUrl } = Astro.props;
---

<section class="hero">
  <!-- Dark Background Layer -->
  <div class="hero-background">
    <!-- Decorative Elements -->
    <div class="decorative-elements">
      <div class="glow glow-1"></div>
      <div class="glow glow-2"></div>
      <div class="circle-ring circle-ring-1"></div>
      <div class="circle-ring circle-ring-2"></div>
    </div>
  </div>

  <div class="container hero-content-wrapper">
    <div class="hero-content text-center">
      <h1 class="hero-tagline">
        All your links<br />
        <span class="highlight">in one place</span>
      </h1>
      
      <p class="hero-description">
        Create your personalized page in seconds. Share your social networks, music, videos and more with a single link.
      </p>
      
      <div class="hero-actions">
        <a href={`${adminUrl}/register`} class="btn btn-primary btn-lg">
          Create my page
        </a>
        <a href="#demo" class="btn btn-secondary btn-lg">
          See demo
        </a>
      </div>

      <!-- Social Proof -->
      <div class="social-proof">
        <div class="avatars">
          <div class="avatar" style="background-color: #FF6B5B;">J</div>
          <div class="avatar" style="background-color: #10b981;">S</div>
          <div class="avatar" style="background-color: #8b5cf6;">M</div>
          <div class="avatar" style="background-color: #f59e0b;">A</div>
        </div>
        <div class="social-text">
          <div class="stars">
            <Star size={16} fill="#FCD34D" strokeWidth={0} />
            <Star size={16} fill="#FCD34D" strokeWidth={0} />
            <Star size={16} fill="#FCD34D" strokeWidth={0} />
            <Star size={16} fill="#FCD34D" strokeWidth={0} />
            <Star size={16} fill="#FCD34D" strokeWidth={0} />
          </div>
          <span class="happy-users">100+ happy users</span>
        </div>
      </div>
    </div>

    <div class="hero-visual">
      <div class="mascot-wrapper">
        <img src="/good.png" alt="Noko Mascot" class="mascot-img" />
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: #16162a;
    overflow: hidden;
    padding-top: 120px;
    padding-bottom: 80px;
  }

  /* Background & Decor */
  .hero-background {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #16162a 0%, #1a1a2e 50%, #252547 100%);
    pointer-events: none;
    z-index: 0;
  }

  .decorative-elements {
    position: absolute;
    inset: 0;
  }

  .glow {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
  }

  .glow-1 {
    width: 600px;
    height: 600px;
    background: var(--color-primary);
    top: -20%;
    left: 20%;
    opacity: 0.1;
  }

  .glow-2 {
    width: 500px;
    height: 500px;
    background: #8b5cf6;
    bottom: -10%;
    right: 10%;
    opacity: 0.1;
  }

  .circle-ring {
    position: absolute;
    border-radius: 50%;
    border: 1px solid rgba(255, 255, 255, 0.03);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .circle-ring-1 { width: 1400px; height: 1400px; }
  .circle-ring-2 { width: 1000px; height: 1000px; }

  /* Content */
  .hero-content-wrapper {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4rem;
    width: 100%;
  }

  .hero-content {
    max-width: 800px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .hero-tagline {
    font-size: clamp(3.5rem, 6vw, 5rem);
    font-weight: 800;
    color: #ffffff;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.03em;
  }

  .hero-description {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
    margin-bottom: 2.5rem;
    max-width: 600px;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-bottom: 3rem;
  }

  .btn-lg {
    padding: 1rem 2.5rem;
    font-size: 1.125rem;
    min-width: 180px;
  }

  /* Social Proof */
  .social-proof {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  .avatars {
    display: flex;
    padding-left: 10px; /* Offset for overlap */
  }

  .avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 2px solid #1a1a2e;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 0.75rem;
    font-weight: 700;
    margin-left: -10px;
  }

  .social-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .stars {
    display: flex;
    gap: 2px;
  }

  .happy-users {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
  }

  /* Visual/Mascot */
  .hero-visual {
    position: relative;
    display: flex;
    justify-content: center;
    width: 100%;
    max-width: 900px;
  }

  .mascot-wrapper {
    position: relative;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .mascot-img {
    width: 100%;
    max-width: 600px;
    height: auto;
    filter: drop-shadow(0 0 60px rgba(255, 107, 91, 0.15));
    animation: float-mascot 8s ease-in-out infinite;
  }

  @keyframes float-mascot {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  @media (max-width: 768px) {
    .hero {
      padding-top: 100px;
    }

    .hero-tagline {
      font-size: 2.5rem;
    }
  }
</style>