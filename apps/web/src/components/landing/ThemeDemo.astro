---
import { FONT_PRESETS } from '@noko/shared/font-presets';

interface Props {
  adminUrl: string;
}

const { adminUrl } = Astro.props;

// Select 5 themes to showcase
const demoThemes = ['modern-pro', 'elegant', 'bold', 'friendly', 'clean'] as const;
---

<section id="demo" class="section demo">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="section-title">See for yourself.</h2>
    </div>

    <div class="demo-tabs" role="tablist">
      {demoThemes.map((themeId, index) => (
        <button
          class="demo-tab"
          role="tab"
          data-theme={themeId}
          aria-selected={index === 0 ? 'true' : 'false'}
        >
          {FONT_PRESETS[themeId].name}
        </button>
      ))}
    </div>

    <div class="demo-preview">
      <div class="phone-mockup">
        <div class="phone-frame">
          <div class="phone-notch"></div>
          <div class="phone-screen" id="demo-screen">
            <div class="demo-content">
              <div class="demo-avatar"></div>
              <div class="demo-name">Jon Labs</div>
              <div class="demo-bio">Web Studio - Geneva</div>
              <div class="demo-links">
                <a href="#" class="demo-link">Our Website</a>
                <a href="#" class="demo-link">Instagram</a>
                <a href="#" class="demo-link">Book a meeting</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="text-center mt-12">
      <p class="section-subtitle mb-8">
        This is your page in 2 minutes.
      </p>
      <a href={`${adminUrl}/register`} class="btn btn-primary btn-lg">
        Create mine
      </a>
    </div>
  </div>
</section>

<style>
  .demo-tabs {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .demo-tab {
    padding: 0.5rem 1.25rem;
    border-radius: var(--radius-full);
    border: 1px solid var(--color-border);
    background: white;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s;
  }

  .demo-tab:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }

  .demo-tab[aria-selected="true"] {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }

  .phone-mockup {
    max-width: 300px;
    margin: 0 auto;
  }

  .phone-frame {
    position: relative;
    background: #1a1a1a;
    border-radius: 40px;
    padding: 12px;
    box-shadow: var(--shadow-2xl);
  }

  .phone-notch {
    position: absolute;
    top: 12px;
    left: 50%;
    transform: translateX(-50%);
    width: 90px;
    height: 24px;
    background: #1a1a1a;
    border-bottom-left-radius: 12px;
    border-bottom-right-radius: 12px;
    z-index: 10;
  }

  .phone-screen {
    background: var(--demo-bg, #fafafa);
    border-radius: 32px;
    padding: 60px 20px 40px;
    min-height: 500px;
    transition: background-color 0.4s ease;
    overflow: hidden;
  }

  .demo-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }

  .demo-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--demo-primary, #FF6B5B) 0%, var(--demo-primary-dark, #E85A4F) 100%);
  }

  .demo-name {
    font-family: var(--demo-font-title, 'Manrope', sans-serif);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--demo-text, #0f172a);
    transition: font-family 0.3s ease;
  }

  .demo-bio {
    font-family: var(--demo-font-body, 'Inter', sans-serif);
    font-size: 0.875rem;
    color: var(--demo-text-secondary, #64748b);
    transition: font-family 0.3s ease;
  }

  .demo-links {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-top: 16px;
  }

  .demo-link {
    display: block;
    width: 100%;
    padding: 16px;
    background: var(--demo-primary, #FF6B5B);
    color: white;
    font-family: var(--demo-font-body, 'Inter', sans-serif);
    font-size: 0.9375rem;
    font-weight: 500;
    text-align: center;
    text-decoration: none;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  /* Theme configurations - applied via JS */
  .phone-screen[data-theme="modern-pro"] {
    --demo-bg: #fafafa;
    --demo-primary: #FF6B5B;
    --demo-primary-dark: #E85A4F;
    --demo-text: #0f172a;
    --demo-text-secondary: #64748b;
    --demo-font-title: 'Plus Jakarta Sans', sans-serif;
    --demo-font-body: 'Plus Jakarta Sans', sans-serif;
  }

  .phone-screen[data-theme="elegant"] {
    --demo-bg: #fdf8f3;
    --demo-primary: #1a1a1a;
    --demo-primary-dark: #000;
    --demo-text: #1a1a1a;
    --demo-text-secondary: #6b5c4c;
    --demo-font-title: 'Playfair Display', serif;
    --demo-font-body: 'DM Sans', sans-serif;
  }

  .phone-screen[data-theme="bold"] {
    --demo-bg: #0f0f0f;
    --demo-primary: #ff4757;
    --demo-primary-dark: #e8414f;
    --demo-text: #ffffff;
    --demo-text-secondary: #a0a0a0;
    --demo-font-title: 'Syne', sans-serif;
    --demo-font-body: 'Barlow', sans-serif;
  }

  .phone-screen[data-theme="friendly"] {
    --demo-bg: #fff5f5;
    --demo-primary: #f59e0b;
    --demo-primary-dark: #d97706;
    --demo-text: #1f2937;
    --demo-text-secondary: #6b7280;
    --demo-font-title: 'Nunito', sans-serif;
    --demo-font-body: 'Nunito', sans-serif;
  }

  .phone-screen[data-theme="clean"] {
    --demo-bg: #ffffff;
    --demo-primary: #3b82f6;
    --demo-primary-dark: #2563eb;
    --demo-text: #111827;
    --demo-text-secondary: #6b7280;
    --demo-font-title: 'DM Sans', sans-serif;
    --demo-font-body: 'DM Sans', sans-serif;
  }
</style>

<script>
  // Theme demo interaction
  const tabs = document.querySelectorAll('.demo-tab');
  const screen = document.getElementById('demo-screen');

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      // Update active tab
      tabs.forEach(t => t.setAttribute('aria-selected', 'false'));
      tab.setAttribute('aria-selected', 'true');

      // Update theme
      const themeId = tab.getAttribute('data-theme');
      if (screen && themeId) {
        screen.setAttribute('data-theme', themeId);
      }
    });
  });

  // Set initial theme
  if (screen) {
    screen.setAttribute('data-theme', 'modern-pro');
  }
</script>