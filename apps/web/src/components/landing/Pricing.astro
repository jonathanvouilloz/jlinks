---
interface Props {
  adminUrl: string;
}

const { adminUrl } = Astro.props;
---

<section id="pricing" class="section pricing">
  <div class="container">
    <div class="text-center mb-24">
      <h2 class="section-title">Free for most.</h2>
      <p class="section-subtitle">Pro for those who want more.</p>
    </div>

    <div class="pricing-cards">
      <!-- Free Plan -->
      <div class="pricing-card">
        <div class="card-header">
          <div class="plan-name">Free</div>
          <div class="plan-price">
            <span class="amount">0</span>
          </div>
          <p class="plan-note">Free forever</p>
        </div>
        
        <div class="card-body">
          <a href={`${adminUrl}/register`} class="btn btn-outline btn-full">Start for free</a>
          
          <ul class="features-list">
            <li>
              <span class="check-icon">✓</span> 6 links
            </li>
            <li>
              <span class="check-icon">✓</span> Custom colors
            </li>
            <li>
              <span class="check-icon">✓</span> Branded QR code
            </li>
            <li>
              <span class="check-icon">✓</span> Contact button
            </li>
            <li>
              <span class="check-icon">✓</span> Email support
            </li>
          </ul>
        </div>
      </div>

      <!-- Pro Plan -->
      <div class="pricing-card featured">
        <div class="card-header">
          <div class="plan-name text-primary">Pro</div>
          <div class="plan-price">
            <span class="amount">5</span>
            <span class="period">CHF/mo</span>
          </div>
          <p class="plan-note">Everything in Free +</p>
        </div>
        
        <div class="card-body">
          <a href={`${adminUrl}/register?plan=pro`} class="btn btn-primary btn-full">Go Pro</a>
          
          <ul class="features-list">
            <li>
              <span class="check-icon">✓</span> Unlimited links
            </li>
            <li>
              <span class="check-icon">✓</span> Custom themes & fonts
            </li>
            <li>
              <span class="check-icon">✓</span> Exclusive layouts
            </li>
            <li>
              <span class="check-icon">✓</span> Complete analytics
            </li>
            <li>
              <span class="check-icon">✓</span> No Noko branding
            </li>
            <li>
              <span class="check-icon">✓</span> Priority support
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .pricing-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 400px));
    justify-content: center;
    gap: 2rem;
  }

  .pricing-card {
    background: white;
    border-radius: var(--radius-2xl);
    border: 1px solid var(--color-border);
    overflow: hidden;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .pricing-card:hover {
    box-shadow: var(--shadow-xl);
    transform: translateY(-5px);
  }

  .pricing-card.featured {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-lg);
    position: relative;
  }
  
  .pricing-card.featured::before {
    content: 'Recommended';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-primary);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.75rem;
    border-bottom-left-radius: var(--radius-md);
    border-bottom-right-radius: var(--radius-md);
  }

  .card-header {
    padding: 2.5rem 2.5rem 0;
    text-align: center;
  }

  .plan-name {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .plan-price {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 0.25rem;
    color: var(--color-text);
  }

  .amount {
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1;
    letter-spacing: -0.05em;
  }

  .period {
    font-size: 1rem;
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  .plan-note {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    margin-top: 0.5rem;
  }

  .card-body {
    padding: 2.5rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .btn-full {
    width: 100%;
    margin-bottom: 2rem;
  }

  .features-list {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .features-list li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--color-text-secondary);
    font-size: 0.9375rem;
  }

  .check-icon {
    color: var(--color-primary);
    font-weight: 700;
    font-size: 1rem;
  }
</style>