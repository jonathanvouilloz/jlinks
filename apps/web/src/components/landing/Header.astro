---
interface Props {
  adminUrl: string;
}

const { adminUrl } = Astro.props;
---

<header class="header" id="main-header">
  <div class="container header-inner">
    <!-- Logo -->
    <a href="/" class="logo">
      <img src="/noko.webp" alt="Noko" class="logo-icon" />
      <span class="logo-text">Noko</span>
    </a>

    <!-- Nav -->
    <nav class="nav-links">
      <a href="#features">Features</a>
      <a href="#pricing">Pricing</a>
      <a href="#faq">FAQ</a>
    </nav>

    <!-- Actions -->
    <div class="header-actions">
      <a href={`${adminUrl}/login`} class="btn btn-ghost btn-sm">Log in</a>
      <a href={`${adminUrl}/register`} class="btn btn-primary btn-sm">Get Started</a>
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 1.5rem 0;
    transition: all 0.3s ease;
  }

  .header.scrolled {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    padding: 1rem 0;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
  }

  .logo-icon {
    height: 32px;
    width: auto;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 800;
    color: white; /* Default white on dark hero */
    letter-spacing: -0.03em;
    transition: color 0.3s ease;
  }

  /* Scrolled state (on light content) */
  .header.scrolled .nav-links a {
    color: var(--color-text-secondary);
  }

  .header.scrolled .nav-links a:hover {
    color: var(--color-primary);
  }

  .header.scrolled .logo-text {
    color: var(--color-text); /* Dark text on light header */
  }

  .header.scrolled .btn-ghost {
    color: var(--color-text);
  }

  .header.scrolled .btn-ghost:hover {
    background: rgba(0, 0, 0, 0.05);
  }

  .nav-links {
    display: none;
    gap: 2rem;
  }

  .header-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .btn-sm {
    padding: 0.5rem 1.25rem;
    font-size: 0.875rem;
  }

  @media (min-width: 768px) {
    .nav-links {
      display: flex;
    }
  }
</style>

<script>
  const header = document.getElementById('main-header');
  
  function updateHeader() {
    if (window.scrollY > 20) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  }

  window.addEventListener('scroll', updateHeader);
  updateHeader(); // Initial check
</script>