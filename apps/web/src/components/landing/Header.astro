---
import LanguageSwitcher from '../LanguageSwitcher.astro';
import en from '@noko/shared/i18n/en.json';
import fr from '@noko/shared/i18n/fr.json';

interface Props {
  adminUrl: string;
}

const { adminUrl } = Astro.props;
const locale = Astro.currentLocale || 'en';
const t = locale === 'fr' ? fr : en;
---

<header class="header" id="main-header">
  <div class="container header-inner">
    <!-- Logo -->
    <a href="/" class="logo">
      <!-- White text logo for dark background -->
      <img src="/white-logo.webp" alt="Nokolink" class="logo-img logo-white" />
      <!-- Dark text logo for light background -->
      <img src="/black-logo.webp" alt="Nokolink" class="logo-img logo-dark" />
    </a>

    <!-- Nav -->
    <nav class="nav-links">
      <a href="#features">{t.landing_nav_features}</a>
      <a href="#pricing">{t.landing_nav_pricing}</a>
      <a href="#faq">{t.landing_nav_faq}</a>
    </nav>

    <!-- Actions -->
    <div class="header-actions">
      <LanguageSwitcher />
      <a href={`${adminUrl}/login`} class="btn btn-ghost btn-sm">{t.landing_nav_login}</a>
      <a href={`${adminUrl}/register`} class="btn btn-primary btn-sm btn-get-started">{t.landing_nav_get_started}</a>
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 1.5rem 0;
    transition: all 0.3s ease;
  }

  .header.scrolled {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    padding: 1rem 0;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    display: flex;
    align-items: center;
    transition: opacity 0.2s;
    position: relative;
    height: 32px;
    width: 140px; /* Adjust width to fit logo */
  }

  .logo:hover {
    opacity: 0.9;
  }

  .logo-img {
    height: 32px;
    width: auto;
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity 0.3s ease;
  }

  .logo-white {
    opacity: 1;
  }

  .logo-dark {
    opacity: 0;
  }

  .nav-links {
    display: none;
    gap: 2rem;
  }

  .nav-links a {
    color: white;
    font-weight: 500;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: var(--color-primary);
  }

  .btn-ghost {
    color: white;
    transition: all 0.2s;
  }

  .btn-ghost:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  /* Scrolled state (on light content) */
  .header.scrolled .logo-white {
    opacity: 0;
  }

  .header.scrolled .logo-dark {
    opacity: 1;
  }

  .header.scrolled .nav-links a {
    color: var(--color-text-secondary);
  }

  .header.scrolled .nav-links a:hover {
    color: var(--color-primary);
  }

  .header.scrolled .btn-ghost {
    color: var(--color-text);
  }

  .header.scrolled .btn-ghost:hover {
    background: rgba(0, 0, 0, 0.05);
  }

  .header-actions {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  /* Language switcher styling to match header */
  .header-actions :global(.language-switcher) {
    color: white;
    padding: 0.5rem 0.75rem;
  }

  .header-actions :global(.language-switcher:hover) {
    background: rgba(255, 255, 255, 0.1);
    color: white;
  }

  .header.scrolled .header-actions :global(.language-switcher) {
    color: var(--color-text-secondary);
  }

  .header.scrolled .header-actions :global(.language-switcher:hover) {
    background: rgba(0, 0, 0, 0.05);
    color: var(--color-text);
  }

  .btn-sm {
    padding: 0.5rem 1.25rem;
    font-size: 0.875rem;
  }

  @media (min-width: 768px) {
    .nav-links {
      display: flex;
    }
  }

  @media (max-width: 768px) {
    .btn-get-started {
      display: none;
    }
  }
</style>

<script>
  const header = document.getElementById('main-header');
  
  function updateHeader() {
    if (window.scrollY > 20) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  }

  window.addEventListener('scroll', updateHeader);
  updateHeader(); // Initial check
</script>