---
interface Props {
  adminUrl: string;
}

const { adminUrl } = Astro.props;
---

<header class="landing-header">
  <div class="landing-header__inner">
    <!-- Gauche: Logo -->
    <a href="/" class="landing-logo">Noko</a>

    <!-- Centre: Navigation sections -->
    <nav class="landing-nav__sections">
      <a href="#features" data-i18n="header.nav.features">Fonctionnalités</a>
      <a href="#pricing" data-i18n="header.nav.pricing">Tarifs</a>
      <a href="#faq" data-i18n="header.nav.faq">FAQ</a>
    </nav>

    <!-- Droite: CTA + Langue -->
    <div class="landing-nav__actions">
      <a href={adminUrl} class="btn btn--primary btn--small" data-i18n="header.cta">
        Créer ma page
      </a>
      <button class="lang-toggle" id="lang-toggle" aria-label="Toggle language">
        <span class="lang-toggle__option is-active" data-lang="fr">FR</span>
        <span class="lang-toggle__separator">/</span>
        <span class="lang-toggle__option" data-lang="en">EN</span>
      </button>
    </div>
  </div>
</header>

<script>
  // Language toggle is handled by landing.ts
</script>
