---
import { Quote } from 'lucide-astro';
import en from '@noko/shared/i18n/en.json';
import fr from '@noko/shared/i18n/fr.json';

const locale = Astro.currentLocale || 'en';
const t = locale === 'fr' ? fr : en;
---

<section class="section testimonials">
  <div class="container">
    <div class="text-center mb-16">
      <h2 class="section-title">{t.landing_testimonials_title}</h2>
    </div>

    <div class="testimonials-grid">
      <!-- Testimonial 1 -->
      <blockquote class="testimonial-card">
        <div class="quote-icon">
          <Quote size={24} fill="currentColor" />
        </div>
        <p class="testimonial-text">
          {t.landing_testimonial_1_text}
        </p>
        <div class="testimonial-author">
          <div class="author-avatar avatar-1">ML</div>
          <div class="author-info">
            <cite class="author-name">{t.landing_testimonial_1_name}</cite>
            <span class="author-role">{t.landing_testimonial_1_role}</span>
          </div>
        </div>
      </blockquote>

      <!-- Testimonial 2 -->
      <blockquote class="testimonial-card">
        <div class="quote-icon">
          <Quote size={24} fill="currentColor" />
        </div>
        <p class="testimonial-text">
          {t.landing_testimonial_2_text}
        </p>
        <div class="testimonial-author">
          <div class="author-avatar avatar-2">TR</div>
          <div class="author-info">
            <cite class="author-name">{t.landing_testimonial_2_name}</cite>
            <span class="author-role">{t.landing_testimonial_2_role}</span>
          </div>
        </div>
      </blockquote>

      <!-- Testimonial 3 -->
      <blockquote class="testimonial-card">
        <div class="quote-icon">
          <Quote size={24} fill="currentColor" />
        </div>
        <p class="testimonial-text">
          {t.landing_testimonial_3_text}
        </p>
        <div class="testimonial-author">
          <div class="author-avatar avatar-3">SM</div>
          <div class="author-info">
            <cite class="author-name">{t.landing_testimonial_3_name}</cite>
            <span class="author-role">{t.landing_testimonial_3_role}</span>
          </div>
        </div>
      </blockquote>
    </div>
  </div>
</section>

<style>
  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .testimonial-card {
    background: white;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-2xl);
    padding: 2.5rem;
    position: relative;
    transition: all 0.2s;
  }

  .testimonial-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .quote-icon {
    color: var(--color-primary-light);
    margin-bottom: 1.5rem;
  }
  
  .quote-icon :global(svg) {
    color: var(--color-primary);
    opacity: 0.2;
    width: 48px;
    height: 48px;
  }

  .testimonial-text {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--color-text);
    margin-bottom: 2rem;
    font-weight: 500;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .author-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    color: white;
    font-size: 1rem;
  }

  .avatar-1 { background: #FF6B5B; }
  .avatar-2 { background: #8b5cf6; }
  .avatar-3 { background: #10b981; }

  .author-info {
    display: flex;
    flex-direction: column;
  }

  .author-name {
    font-style: normal;
    font-weight: 700;
    color: var(--color-text);
  }

  .author-role {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }
</style>