---
interface Props {
  adminUrl: string;
}

const { adminUrl } = Astro.props;
---

<section class="section final-cta">
  <div class="mascot-bg">
    <img src="/good.png" alt="" />
  </div>
  
  <div class="container text-center">
    <div class="cta-card">
      <h2 class="section-title text-dark">Your link page, hassle-free.</h2>
      
      <div class="cta-actions">
        <a href={`${adminUrl}/register`} class="btn btn-primary btn-lg bg-white text-primary">
          Create my page for free
        </a>
      </div>

      <p class="cta-note">Free • 2 minutes • No credit card</p>
    </div>
  </div>
</section>

<style>
  .final-cta {
    padding-bottom: 8rem;
    padding-top: 10rem; /* Increased top padding */
    position: relative;
    overflow: hidden;
  }

  .mascot-bg {
    position: absolute;
    bottom: -250px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 0;
    width: 100%;
    max-width: 900px;
    pointer-events: none;
    display: flex;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .mascot-bg {
      bottom: -180px;
      max-width: 600px;
    }
  }

  .mascot-bg img {
    width: 100%;
    height: auto;
    opacity: 0.9;
  }

  .cta-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-2xl);
    padding: 5rem 2rem;
    position: relative;
    z-index: 1;
    overflow: hidden;
    box-shadow: var(--shadow-2xl);
  }

  .text-dark { color: var(--color-text); } /* New class for dark text */

  .bg-white { background-color: white !important; }
  .text-primary { color: var(--color-primary) !important; }

  .cta-actions {
    margin: 2.5rem 0 1.5rem;
    display: flex;
    justify-content: center;
  }

  .btn-lg {
    padding: 1rem 2.5rem;
    font-size: 1.125rem;
  }
  
  .btn-primary.bg-white:hover {
    background-color: var(--color-primary-light) !important;
    transform: translateY(-2px);
  }

  .cta-note {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.875rem;
    font-weight: 500;
  }
</style>