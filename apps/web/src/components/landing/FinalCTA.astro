---
interface Props {
  adminUrl: string;
}

const { adminUrl } = Astro.props;
---

<section class="section final-cta">
  <div class="mascot-bg">
    <img src="/good.png" alt="" />
  </div>
  
  <div class="container text-center">
    <div class="cta-card">
      <h2 class="section-title text-white">Your link page, hassle-free.</h2>
      
      <div class="cta-actions">
        <a href={`${adminUrl}/register`} class="btn btn-primary btn-lg bg-white text-primary">
          Create my page for free
        </a>
      </div>

      <p class="cta-note">Free • 2 minutes • No credit card</p>
    </div>
  </div>
</section>

<style>
  .final-cta {
    padding-bottom: 8rem;
    position: relative;
    overflow: hidden; /* Prevent horizontal scroll if mascot is huge */
  }

  .mascot-bg {
    position: absolute;
    bottom: -450px; /* Lowered significantly to hide the bottom half */
    left: 50%;
    transform: translateX(-50%);
    z-index: 0; /* Sits above page bg but behind card */
    width: 100%;
    max-width: 1000px; /* Adjusted size for better fit */
    pointer-events: none;
    display: flex;
    justify-content: center;
  }

  .mascot-bg img {
    width: 100%;
    height: auto;
    opacity: 0.9; /* Made slightly more visible */
  }

  .cta-card {
    background: rgba(255, 255, 255, 0.05); /* Semi-transparent white */
    backdrop-filter: blur(20px); /* Frosted glass effect */
    border: 1px solid rgba(255, 255, 255, 0.1); /* Subtle white border */
    border-radius: var(--radius-2xl);
    padding: 5rem 2rem;
    position: relative; /* Ensure card is above the mascot */
    z-index: 1;
    overflow: hidden;
    box-shadow: var(--shadow-2xl);
  }

  .text-white { color: white; }
  
  .bg-white { background-color: white !important; }
  .text-primary { color: var(--color-primary) !important; }

  .cta-actions {
    margin: 2.5rem 0 1.5rem;
    display: flex;
    justify-content: center;
  }

  .btn-lg {
    padding: 1rem 2.5rem;
    font-size: 1.125rem;
  }
  
  .btn-primary.bg-white:hover {
    background-color: var(--color-primary-light) !important;
    transform: translateY(-2px);
  }

  .cta-note {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.875rem;
    font-weight: 500;
  }
</style>